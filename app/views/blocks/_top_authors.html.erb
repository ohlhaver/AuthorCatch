<% if block.any? %>
<div class='news_block <%= content_block_position %>'>
  <h2><span class="page_label"><%= link_to t('navigation.main.top_authors'), top_authors_path %></span></h2>
  <% block.each do |story| %>
    <div class='headline'><%= render_story_preview( story ) %></div>
  <% end %>
</div>
<%= content_block_clearfix %>
<% end %>
